{
  // Neon Argon Xenon Radon Krypton
  "editor.fontFamily": "'Nova Nerd Font', 'Input Mono', 'Monaspace Neon', '苹方-简'",
  "editor.fontWeight": "600",
  "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss06', 'zero'",
  "editor.fontSize": 24,
  "editor.lineHeight": 2,
  "editor.tabSize": 2,
  "editor.mouseWheelZoom": true,
  "editor.lineNumbers": "interval",
  "editor.guides.indentation": false,
  "editor.guides.bracketPairs": false,

  "terminal.integrated.fontFamily": "'Mononoki Nerd Font Mono', '苹方-简'",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.lineHeight": 1.1,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.enableMultiLinePasteWarning": false,

  "editor.cursorBlinking": "smooth",
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "workbench.list.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,
  "diffEditor.ignoreTrimWhitespace": true,

  "editor.linkedEditing": true,
  "editor.suggestSelection": "first",
  "editor.suggest.insertMode": "replace",
  "editor.inlineSuggest.enabled": true,
  "editor.quickSuggestions": {
    "strings": true
  },

  "autocorrect.enable": false,
  "autocorrect.enableLint": false,
  "autocorrect.formatOnSave": false,

  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "prettier.printWidth": 160,
  "prettier.endOfLine": "auto",

  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "sortcss.sortOnSave": true,
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "ngClass"
  ],

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // "typescript.inlayHints.enumMemberValues.enabled": true,
  // "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  // "typescript.inlayHints.parameterNames.enabled": "literals",
  // "typescript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": true,
  // "typescript.inlayHints.parameterTypes.enabled": true,
  // "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  // "typescript.inlayHints.variableTypes.enabled": true,
  // "typescript.inlayHints.variableTypes.suppressWhenTypeMatchesName": true,

  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "svelte.enable-ts-plugin": true,

  "[python]": {
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "python.analysis.autoFormatStrings": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.inlayHints.callArgumentNames": "all",
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.pytestParameters": true,
  "python.analysis.inlayHints.variableTypes": true,

  "[rust]": {
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },

  "[go]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "golang.go"
  },
  "[go.mod]": {
    "editor.defaultFormatter": "golang.go"
  },
  "go.inlayHints.constantValues": true,
  "go.inlayHints.parameterNames": true,
  "go.inlayHints.rangeVariableTypes": true,
  "go.inlayHints.assignVariableTypes": true,
  "go.inlayHints.compositeLiteralFields": true,
  "go.inlayHints.compositeLiteralTypes": true,
  "go.inlayHints.functionTypeParameters": true,
  "go.toolsManagement.autoUpdate": true,

  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },

  "github.copilot.enable": {
    "*": true,
    "markdown": true,
    "plaintext": false,
    "yaml": false
  },
  "github.copilot.chat.localeOverride": "zh-CN",
  "github.copilot.chat.welcomeMessage": "never",

  "gitlens.codeLens.enabled": false,
  "gitlens.showWhatsNewAfterUpgrades": false,
  "gitlens.showWelcomeOnInstall": false,

  "git.confirmSync": false,
  "git.autofetch": false,
  "git.openRepositoryInParentFolders": "never",

  "search.useIgnoreFiles": true,
  "search.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn.lock": true
  },

  "cSpell.userWords": [
    "antfu",
    "autocorrect",
    "autofetch",
    "charliermarsh",
    "degit",
    "Dragonfruit",
    "esbenp",
    "Evondev",
    "gonic",
    "isort",
    "mancuoj",
    "Moegi",
    "Monaspace",
    "Mononoki",
    "Passionfruit",
    "pytest",
    "quokka",
    "signup",
    "sortcss",
    "struct",
    "tailwindcss",
    "tamasfe",
    "Vitesse",
    "yzhang"
  ],

  "remote.SSH.remotePlatform": {
    "47.116.70.23": "linux"
  },
  "symbols.hidesExplorerArrows": false,

  "security.workspace.trust.enabled": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "editor.minimap.enabled": false,
  "editor.stickyScroll.enabled": true,
  "editor.hover.sticky": true,
  "workbench.tree.enableStickyScroll": true,
  // "terminal.integrated.stickyScroll.enabled": true,
  "window.menuBarVisibility": "compact",
  "workbench.activityBar.location": "top",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.startupEditor": "none",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.iconTheme": "file-icons",
  "workbench.colorTheme": "GitHub Dark Default",
}
